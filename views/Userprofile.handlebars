<h2>Create Parent Profile</h2>

<form class=" form userProfileForm">
    <div class="form-group">
        <label>First Name:</label>
        <input class="form-input" type="text" id="firstName" />
    </div>
    <div class="form-group">
        <label>Last Name:</label>
        <input class="form-input" type="text" id="lastName" />
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input class="form-input" type="email" id="email" />
    </div>
    <div class="form-group">
        <label>Gender Identity:</label>
        </br>
        <input type="radio" name="gender" value="male">
        <label for="male">Male</label><br>
        <input type="radio" name="gender" value="female">
        <label for="fem">Female</label><br>
        <input type="radio" name="gender" value="non-binary">
        <label for="nonbi">Non-binary</label>
    </div>
    <div class="form-group">
        <label>Friend Preference:</label>
        </br>
        <input type="radio" id="maleFriend" name="genderPref" value="male">
        <label for="male">Male</label><br>
        <input type="radio" id="femaleFriend" name="genderPref" value="female">
        <label for="female">Female</label><br>
        <input type="radio" id="bothFriend" name="genderPref" value="both">
        <label for="other">No Preference</label>
    </div>
    <div class="form-group">
        <label>Zip Code:</label>
        <input class="form-input" type="number" id="zip" />
    </div>
    <!-- Slider resource https://www.w3schools.com/howto/howto_js_rangeslider.asp -->
    <div class="slidecontainer form-group">
        <label>Max Distance Willing to Travel:</label>
        <input type="range" min="1" max="5" value="3" class="slider" id="energyLevel">
        </br>
        <small id="distanceRange" class="form-text text-muted">10 20 30 40 50+</small>
    </div>
    </div>
    <div class="form-group">
        <label>User Name:</label>
        <input class="form-input" type="text" id="userName" placeholder="default email from ^^" />
    </div>
    <div class="form-group">
        <label>Password:</label>
        <input class="form-input" type="password" id="password" />
    </div>
    <!-- <div class="form-group">
            <label>Confirm Password:</label>
            <input class="form-input" type="password" id="confirmpassword" />
        </div> -->
    <button class="btn btn-warning" id="userSubmit">Create My Profile!</button>
    </div>



