{{!-- login view --}}

<form class="form login-form">
    <h2 class="formh2"><i class="fas fa-paw mx-3"></i>Login</h2>
    <div class="mb-3 form-group">
        <label for="email-login" class="form-label">Email</label>
        <input class="form-control" type="text" id="email-login">
    </div>
    <div class="mb-3 form-group">
        <label for="InputPassword" class="form-label">Password</label>
        <input type="password" class="form-control" id="password-login">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-action">Login<i class="fas fa-paw ms-3"></i></button>
    </div>
    <a id="sign-up-link" href="/ownerprofile" onclick="changeView()">Sign up instead</a>
</form>



<script src="./js/login.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>